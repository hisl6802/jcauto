<%= render partial: 'spree/shared/error_messages', locals: { target: @image } %>

<div data-hook="file" class="form-group">
  <%= f.label :image_path, Spree.t(:filename) %>
  <%= f.text_area :image_path %>
</div>
<div class="form-group">
  <%= f.label :description, Spree.t(:description) %>
  <%= f.text_area :description, :rows => 4, :class => 'form-control' %>
</div>
<div class="form-group">
  <%= f.check_box :main_image %>
  <%= f.label :main_image, Spree.t(:main_image) %>
</div>
<div class="form-group">
	<%= f.check_box :thumb_image %>
  <%= f.label :thumb_image, Spree.t(:thumb_image) %>
</div>

