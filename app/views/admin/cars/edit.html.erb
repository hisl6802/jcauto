<div class="container">
  <div class="row">
  		<div class="col-md-12">
	  		<ol class="breadcrumb" style="text-align: left">
		      <li><%=link_to admin_cars_path do %>Cars<% end %></li>
		      <li><%=link_to edit_admin_car_path(@car) do %><%= @car.name %><% end %></li>
		      <li class="active">Images</li>
		    </ol>
		</div>

		<div class="col-md-8">
			<h2><%= @car.name %></h2>
		</div>
		<div class="col-md-4" style="padding-top: 25px">
			<%= link_to 'View Gallery', @car, class: "btn btn-info" %>
			<%= link_to 'Images', admin_car_car_images_path(@car), class: "btn btn-info" %>
		</div>
		<div class="col-md-12">
			<%= render 'form' %>
		</div>
	</div>
</div>

