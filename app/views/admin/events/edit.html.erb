<div class="container">
  <div class="row">
  		<div class="col-md-12">
	  		<ol class="breadcrumb" style="text-align: left">
		      <li><%=link_to admin_events_path do %>Events<% end %></li>
		      <li class="active"><%= @event.name %></li>
		    </ol>
		</div>

		<div class="col-md-8">
			<h2><%= @event.name %></h2>
		</div>
		<div class="col-md-4" style="padding-top: 25px">
			<%= link_to 'View Gallery', @event, class: "btn btn-info" %>
			<%= link_to 'Images', admin_event_event_images_path(@event), class: "btn btn-info" %>
		</div>

	</div>
	<div class="row">
		<%= render 'form' %>
	</div>
</div>

