<%= form_for [:admin, @event], html: { multipart: true } do |f| %>
  <%= render partial: 'spree/shared/error_messages', locals: { target: @event } %>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :name, Spree.t(:name) %>
        <%= f.text_field :name, :class => 'form-control'  %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :location, Spree.t(:location) %>
        <%= f.text_field :location, :class => 'form-control'  %>
      </div>
    </div>

    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :description, Spree.t(:description) %>
        <%= f.text_area :description, :rows => 4, :class => 'form-control' %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :event_date, Spree.t(:event_date) %>
        <%= f.text_field :event_date, :class => 'form-control', :data => {:provide => 'datepicker'}  %>
      </div>
    </div>

    <div class="col-md-6">
      <% if @event.thumb_image_path %>
        <div data-hook="thumbnail">
          <%= f.label Spree.t(:thumbnail) %>
          <%= link_to image_tag(@event.thumb_image_path), @event.thumb_image_path %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :attachment, Spree.t(:filename) %>
        <%= f.file_field :attachment  %>
      </div>
    </div>

    <div class="col-md-12">
      <div class="actions">
        <%= f.submit class: "btn btn-success"%>
        <%= link_to 'Back', admin_events_path, class: "btn btn-default" %> 
      </div>
    </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
  });
</script>