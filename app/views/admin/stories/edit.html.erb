<div class="container">
  	<div class="row">
  		<div class="col-md-12">
	  		<ol class="breadcrumb" style="text-align: left">
		      <li><%=link_to admin_story_path do %>Story<% end %></li>
		      <li class="active"><%= @story.name %></li>
		    </ol>
		</div>

		<div class="col-md-8">
			<h2><%= @story.name %></h2>
		</div>
		<div class="col-md-4" style="padding-top: 25px">
			<%= link_to 'View Gallery', @story, class: "btn btn-info" %>
			<%= link_to 'Images', admin_story_story_images_path(@story), class: "btn btn-info" %>
		</div>
		
		<%= render 'form' %>

	</div>
</div>

