<div class="container">
	<div class="row">
		<div class="col-md-12">
			<ol class="breadcrumb" style="text-align: left">
	      <li><%=link_to admin_customers_path do %>Customers<% end %></li>
	      <li class="active"><%= @customer.full_name %></li>
	    </ol>
	  </div>
		<div class="col-md-6">
			<h2 style="margin-top: 0px"><%= @customer.full_name %>
			<% if @customer.needs_action -%>
				<span class="label label-warning" style="font-size: 0.5em">Alert</span>
			<% end -%>
			</h2>
		</div>
		<div class="col-md-2">
			<%= link_to edit_admin_customer_path(@customer), class: "btn btn-default" do %>
				<span class="glyphicon glyphicon-pencil"></span>  Edit Customer
			<% end %>
		</div>
		<div class="col-md-2">
			<%= link_to new_admin_customer_contact_path(@customer), class: "btn btn-primary" do %>
				<span class="glyphicon glyphicon-plus"></span>  New Contact
			<% end %>
		</div>
		<div class="col-md-2">
			<%= link_to admin_customer_path(@customer), action: "delete", class: "btn btn-warning" do %>
				<span class="glyphicon glyphicon-remove"></span>  Delete Customer
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="well" style="text-align: center">
			<div class="col-md-4">
				<h4>Phone</h4>
				<p><%= @customer.phone? ? @customer.phone : "N/A" %></p>
			</div>
			<div class="col-md-4">
				<h4>Email</h4>
				<p><%= @customer.email? ? @customer.email : "N/A" %></p>
			</div>
			<div class="col-md-4">
				<h4>Vehicle</h4>
				<p><%= @customer.vehicle? ? @customer.vehicle : "N/A" %></p>
			</div>
			<div class="clearfix"></div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div id="content" class="col-md-12" style="margin-top: 25px">
	   		<%= flash_messages %>
			</div>
			<table class="table table-responsive table-striped" style="text-align: center">
				<thead>
					<tr>
						<th>Date</th>
						<th>JC Employee</th>
						<th>Contact Method</th>
						<th>Notes</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					<% @customer.contacts.each do |contact| %>
						<tr class='<%= contact.needs_action ? (contact.resolved ? "success" : "warning") : "" %>'>
							<td><%= contact.date.strftime("%m/%d/%Y at %I:%M%p") %></td>
							<td><%= contact.jc_employee %></td>
							<td><%= contact.method %></td>
							<td><%= contact.notes %></td>
							<td>
								<%= link_to resolved_admin_customer_contact_path(@customer, contact), method: :put, class: "btn btn-success" do %><%= contact.resolved ? "Un-Resolve" : "Resolve" %><% end %>
								<%= link_to admin_customer_contact_path(@customer, contact), action: "delete", class: "btn btn-warning" do %><span class='glyphicon glyphicon-remove'></span><% end %>
								<%= link_to edit_admin_customer_contact_path(@customer, contact), class: "btn btn-primary" do %><span class='glyphicon glyphicon-pencil'></span><% end %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div><!-- Col -->
	</div><!-- Row -->
</div>