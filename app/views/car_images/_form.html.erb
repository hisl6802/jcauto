<div data-hook="admin_image_form_fields" class="row">
  <div class="col-md-4">
    <div data-hook="file" class="form-group">
      <%= f.label :attachment, Spree.t(:filename) %>
      <%= f.file_field :attachment %>
    </div>
  </div>
  <div data-hook="alt_text" class="col-md-4">
    <div class="form-group">
      <%= f.label :description, Spree.t(:alt_text) %>
      <%= f.text_area :description, :rows => 4, :class => 'form-control' %>
    </div>
  </div>
  <div data-hook="alt_text" class="col-md-4">
    <div class="form-group">
      <%= f.label :state, Spree.t(:state) %>
      <%= f.collection_select(:state, CarImage.states, :last, :first, {:prompt => "Select a State"}, {:class=>'form-control'} ) %>
    </div>
  </div>
</div>
