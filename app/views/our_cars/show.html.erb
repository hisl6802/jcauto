<div class="container">
	<div class="row row-centered">
		<div class="col-md-12 text-center">
			<h1><%= @our_car.name %></h1>
			<p class="intro"><%= @our_car.description %></p>
		</div>
		<% images = @our_car.our_car_images %>
		<% first = true %>
		<div class="col-md-12">
			<%= image_tag "arrow-02.png", class: "gallery-arrow-left", alt: "previous", id: "previous" %>
			<div class="gallery_container">
				<%= image_tag images[0].image_path, alt: "#{images[0].description}", style: "width: 100%", id:"gallery_main" %>
			</div>
			<%= image_tag "arrow-01.png", class: "gallery-arrow-right", alt: "previous", id: "next" %>
		</div>	

		<div class="col-xs-12 col-md-12">
			<div id="caption">
				<p><%= images[0].description %></p>
			</div>
		</div>

	</div>
	<div class="row row-centered" style="margin-top: -50px">
		<% images.each do |image| %>
			<div class="col-xs-6 col-sm-4 col-md-2 col-centered <%= first ? "thumb_selected" : "" %>" id="imageGallery">
				<a href=<%'#{asset_path(image.image_path)}' %>>
					<%= image_tag "thumbs/" + image.image_path, alt: image.description, class: "icon", :data => { :path => "#{asset_path(image.image_path)}" } %>
				</a>
				<% if first %>
					<% first = false %>
				<% end %>
			</div>
		<% end %>			
	</div><!-- row -->
</div>

<p id="notice"><%= notice %></p>

